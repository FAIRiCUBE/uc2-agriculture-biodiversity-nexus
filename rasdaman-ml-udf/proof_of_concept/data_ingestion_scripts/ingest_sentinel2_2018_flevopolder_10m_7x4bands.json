{
  "config": {
    "service_url": "http://localhost:8080/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false,
    "subset_correction": false,
    "insitu": false
  },
  "input": {
    "coverage_id": "sentinel2_2018_flevopolder_10m_7x4bands",
    "paths": [
      "/data/sentinel2_2018_flevopolder_10m_7x4bands.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
        "coverage": {
          "crs": "EPSG/0/32631",
          "metadata": {
            "type": "xml",
            "global": {
              "title": "'Sentinel-2 data served by rasdaman'",
	            "originator": "Wageningen University & Research (WUR) - 6708 PB Wageningen, Netherlands",
	            "resposible": "Rob Knapen",
	            "description": "Preprocessed stack of Sentinel2 images over Dutch study area for a semantic segmentation example.",
              "bands": "Stacked values of 7 Sentinel 2 images (R, G, B, NIR per image). 28 Bands in total.",
              "cell_type": "Sentinel2 multispectral band value (float)",
              "project_purpose": "This data is part of a deep learning example to demonstrate how semantic segmentation works and to see how the functionality can be integrated in Rasdaman."
            }
          },
          "slicer": {
            "type": "gdal",
            "bands": [
              {
                "name": "Band_1",
                "identifier": "Band 1"
              },
              {
                "name": "Band_2",
                "identifier": "Band 2"
              },
              {
                "name": "Band_3",
                "identifier": "Band 3"
              },
              {
                "name": "Band_4",
                "identifier": "Band 4"
              },
              {
                "name": "Band_5",
                "identifier": "Band 5"
              },
              {
                "name": "Band_6",
                "identifier": "Band 6"
              },
              {
                "name": "Band_7",
                "identifier": "Band 7"
              },
              {
                "name": "Band_8",
                "identifier": "Band 8"
              },
              {
                "name": "Band_9",
                "identifier": "Band 9"
              },
              {
                "name": "Band_10",
                "identifier": "Band 10"
              },
              {
                "name": "Band_11",
                "identifier": "Band 11"
              },
              {
                "name": "Band_12",
                "identifier": "Band 12"
              },
              {
                "name": "Band_13",
                "identifier": "Band 13"
              },
              {
                "name": "Band_14",
                "identifier": "Band 14"
              },
              {
                "name": "Band_15",
                "identifier": "Band 15"
              },
              {
                "name": "Band_16",
                "identifier": "Band 16"
              },
              {
                "name": "Band_17",
                "identifier": "Band 17"
              },
              {
                "name": "Band_18",
                "identifier": "Band 18"
              },
              {
                "name": "Band_19",
                "identifier": "Band 19"
              },
              {
                "name": "Band_20",
                "identifier": "Band 20"
              },
              {
                "name": "Band_21",
                "identifier": "Band 21"
              },
              {
                "name": "Band_22",
                "identifier": "Band 22"
              },
              {
                "name": "Band_23",
                "identifier": "Band 23"
              },
              {
                "name": "Band_24",
                "identifier": "Band 24"
              },
              {
                "name": "Band_25",
                "identifier": "Band 25"
              },
              {
                "name": "Band_26",
                "identifier": "Band 26"
              },
              {
                "name": "Band_27",
                "identifier": "Band 27"
              },
              {
                "name": "Band_28",
                "identifier": "Band 28"
              }
            ],
            "axes": {
              "E": {
                  "min": "${gdal:minX}",
                  "max": "${gdal:maxX}",
                  "gridOrder": 0,
                  "resolution": "${gdal:resolutionX}"
              },
              "N": {
                  "min": "${gdal:minY}",
                  "max": "${gdal:maxY}",
                  "gridOrder": 1,
                  "resolution": "${gdal:resolutionY}"
              }
          }
        }      
      },
      "tiling": "ALIGNED [0:500, 0:500]"
    }
  },
  "hooks": [{
    "description": "Calculate the per band max values",
    "when": "after_import",
    "cmd": "rasql -q 'select encode(max_cells(c), \"csv\") from sentinel2_2018_flevopolder_10m_7x4bands as c' --out file --outfile result && rasql -q 'create collection sentinel2_2018_flevopolder_10m_7x4bands_maxes UShortSet1' --user rasadmin --passwd rasadmin && ./after_import.sh"
  }]
}
